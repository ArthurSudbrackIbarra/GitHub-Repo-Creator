#!/bin/bash

COMMAND=$1

SCRIPT_DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]:-$0}"; )" &> /dev/null && pwd 2> /dev/null; )";

if [ -z "$COMMAND" ]; then
    echo
    echo "GRC: No command passed."
    echo
    exit 0
fi


if [ $COMMAND = "create" ] || [ $COMMAND = "save" ]; then
    USER_FILE_PATH=$2
    if [[ "$USER_FILE_PATH" = /* ]]; then
        python3 $SCRIPT_DIR/.program-files/main.py $@
    else
        ABSOLUTE_FILE_PATH=$PWD/$USER_FILE_PATH
        python3 $SCRIPT_DIR/.program-files/main.py $COMMAND $ABSOLUTE_FILE_PATH
    fi     
else
    python3 $SCRIPT_DIR/.program-files/main.py $@
fi
